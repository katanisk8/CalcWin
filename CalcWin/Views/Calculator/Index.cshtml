@{
    ViewData["Title"] = "Calculator";
    @model CalcWin.Views.Calculator.EntryDataViewModel
}

<div class="row content text-center">
    <div class="col-sm-3">
        <div class="well well-result">
            <h2>Fruits</h2>
            <h4>Choose fruits which you would like to use to make wine.</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    @foreach (var fruit in Model.Fruits)
                    {
                        <tr>
                            <td class="td-fruits">@fruit.Name</td>
                            <td><input type="number" id="@fruit.Id" name="Fruits" class="form-control input-sm" placeholder="Quantity" /></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row content">
            <div class="well well-result">
                <div class="row content">
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <h4>Wine</h4>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <div class="form-group"></div>
                                    <label class="col-sm-4 control-label">Alcohol Quantity:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-percent"></i></span>
                                            <input type="number" id="alcoholQuantity" name="alcoholQuantity" class="form-control" placeholder="Quantity">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Flavor:</label>
                                    <div class="col-sm-8">

                                        <div class="btn-group bton-group-flavors" role="group" aria-label="...">
                                            @foreach (var flavor in Model.Flavors)
                                            {
                                                <button type="reset" class="btn btn-default btn-flavor">@flavor.Name</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Mixture corretion:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <input type="checkbox" id="mixtureCorretionCheckbox" aria-label="...">
                                            </span>
                                            <input type="number" id="mixtureCorretionQuantity" name="mixtureCorretionQuantity" class="form-control" placeholder="Quantity">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <h4>Options</h4>
                            <button type="button" class="btn btn-info btn-block">New</button>
                            <button type="button" class="btn btn-success btn-block">Save</button>
                            <button type="button" class="btn btn-danger btn-block">Open</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><div class="row content">
            <div class="well well-result">
                <h4>Parameters</h4>
                <div class="row content">
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <p>Mixture</p>
                            <div class="table-responsive">
                                <table class="table table-hover table-condensed">
                                    <tr>
                                        <td>Fruits Quantity</td>
                                        <td>[kg]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Fruits Mixture</td>
                                        <td>[l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Sugar In Mixture</td>
                                        <td>[g/l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Acid In Mixture</td>
                                        <td>[g/l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Juice Quantity</td>
                                        <td>[l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Sugar In Juice</td>
                                        <td>[g/l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Acid In Juice</td>
                                        <td>[g/l]</td>
                                        <td>19.19</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <p>Wine</p>
                            <div class="table-responsive">
                                <table class="table table-hover table-condensed">
                                    <tr>
                                        <td>Color</td>
                                        <td>[-]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Alcohol</td>
                                        <td>[%]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Flavor</td>
                                        <td>[-]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Quantity</td>
                                        <td>[l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Cost</td>
                                        <td>[PLN]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Cost Per Liter</td>
                                        <td>[PLN/l]</td>
                                        <td>19.19</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><div class="row content">
            <div class="well well-result">
                <h4>Recipe</h4>
                <div class="row content">
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <p>Fruits</p>

                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well well-result">
                            <p>Suplements</p>
                            <div class="table-responsive">
                                <table class="table table-hover table-condensed">
                                    <tr>
                                        <td>Sugar</td>
                                        <td>[g]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Acid</td>
                                        <td>[g]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Water</td>
                                        <td>[l]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Yeast Food</td>
                                        <td>[g]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Yeast</td>
                                        <td>[g]</td>
                                        <td>19.19</td>
                                    </tr>
                                    <tr>
                                        <td>Suplements Cost</td>
                                        <td>[PLN]</td>
                                        <td>19.19</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>