@model CalcWin.Views.Projects.ProjectsViewModel
@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/js/ScrollUp.js")"></script>
}
@{
    ViewData["Title"] = "Projects";
}

<form class="container" method="post">
    <div class="well well-projects text-center col-sm-3">
        <h4>Options</h4>
        <a asp-controller="Calculator" asp-action="Index" class="btn btn-info btn-block">New</a>
        <button type="submit" asp-controller="Projects" asp-action="Open" class="btn btn-success btn-block">Open</button>
        <button type="button" data-toggle="modal" data-target="#EditModal" class="btn btn-warning btn-block">Edit</button>
        <button type="button" data-toggle="modal" data-target="#DeleteModal" class="btn btn-danger btn-block">Delete</button>
    </div>
    <div class="table-responsive well well-projects text-center col-sm-6">
        <h2>Wine Projects</h2>
        <p>Choose project which you would like to load</p>
        <table class="table table-hover text-center">
            <thead class="text-center">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Fruits</th>
                    <th>Quantity [kg]</th>
                    <th>Flavor</th>
                    <th>Alcohol [%]</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td class="col-sm-1">
                            <input type="radio" id="Project[@project.Id]" name="OpenWineProjectId" value="@project.Id" />
                        </td>
                        <td class="col-sm-2">@project.Name</td>
                        <td class="col-sm-2">
                            @foreach (var ingredient in project.Ingredients)
                            {
                                <p>@ingredient.Fruit.Name</p>
                            }
                        </td>
                        <td class="col-sm-1">
                            @foreach (var ingredient in project.Ingredients)
                            {
                                <p>@ingredient.Quantity</p>
                            }
                        </td>
                        <td class="col-sm-2">@project.Flavor.Name</td>
                        <td class="col-sm-2">@project.AlcoholQuantity</td>
                        <td class="col-sm-2">
                            @project.Date
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a onclick="animateScrollTop(0, 1000)" id="myBtn" class="btn btn-info btn-block" title="Go to top"><span class="glyphicon glyphicon-chevron-up"></span></a>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="EditModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Project</h4>
                </div>
                <div class="modal-body">
                    <table class="table text-center table-project-edit">
                        <thead class="text-center">
                            <tr>
                                <th>Name</th>
                                <th>Fruits</th>
                                <th>Quantity [kg]</th>
                                <th>Flavor</th>
                                <th>Alcohol [%]</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @if (Model.Projects.Count > 0)
                                {
                                    <td class=""><input class="form-control input-sm" placeholder="@Model.Projects.First().Name" /></td>
                                    <td class="">
                                        @foreach (var ingredient in Model.Projects.First().Ingredients)
                                        {
                                            <input class="form-control input-sm input-project-edit" placeholder="@ingredient.Fruit.Name" />
                                        }
                                    </td>
                                    <td class="">
                                        @foreach (var ingredient in Model.Projects.First().Ingredients)
                                        {
                                            <input class="form-control input-sm input-project-edit" placeholder="@ingredient.Quantity" />
                                        }
                                    </td>
                                    <td class=""><input class="form-control input-sm" placeholder="@Model.Projects.First().Flavor.Name" /></td>
                                    <td class=""><input class="form-control input-sm" placeholder="@Model.Projects.First().AlcoholQuantity" /></td>
                                    <td class="">
                                        <input class="form-control input-sm" placeholder="@Model.Projects.First().Date" />
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                    <div class="modal-footer">
                        <button type="submit" formmethod="post" asp-controller="Projects" asp-action="Edit" class="btn btn-default">Edit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="DeleteModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Project</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" formmethod="post" asp-controller="Projects" asp-action="Delete" class="btn btn-default">Delete</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>