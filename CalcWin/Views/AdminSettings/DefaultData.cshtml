@model CalcWin.Models.AdminSettingsViewModels.DefaultDataViewModel
@{
    ViewData["Title"] = "Admin Settings";
    AdminSettingsNavPages.AddActiveAdminSettingsPage(ViewData, AdminSettingsNavPages.DefaultData);
}

<div id="page-wrapper">
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            @ViewData.ModelState["Error"].Errors.First().ErrorMessage
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Admin Settings
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="post" asp-action="LoadDefaultData" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Default application data</label>
                                    <input asp-for="File" />
                                </div>
                                <button type="submit" class="btn btn-default">Load</button>
                                <button type="reset" class="btn btn-default">Reset</button>
                            </form>
                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
